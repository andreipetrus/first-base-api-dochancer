{
  "name": "api-dochancer",
  "version": "1.0.0",
  "description": "OpenAPI Documentation Generator with AI Enhancement",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "npm run build --workspace=shared",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=backend",
    "test": "npm run test --workspaces",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:upload": "playwright test upload.spec.ts",
    "test:workflow": "playwright test full-workflow.spec.ts",
    "test:preview": "playwright test preview.spec.ts",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "concurrently": "^8.2.2",
    "playwright": "^1.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andreipetrus/first-base-api-dochancer.git"
  },
  "author": "",
  "license": "MIT"
}
